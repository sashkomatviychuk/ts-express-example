{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom",
            "esnext"
        ]
    },
    "include": [
        "./app/**/*.ts",
        "./types/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./bin"
    ]
}